{
    "compilerOptions": {
        "checkJs": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowUmdGlobalAccess": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "**/.git/**",
        "lib/**",
        "**/*.min.js"
    ],
    "typeAcquisition": {
        "include": [
            "jquery",
            "@popperjs/core",
            "toastr",
            "showdown",
            "dompurify",
            "moment",
            "seedrandom",
            "showdown-katex",
            "droll",
            "handlebars",
            "highlight.js",
            "localforage",
            "pdfjs-dist",
            "@mozilla/readability"
        ]
    }
}
